{
  "name": "streampay-root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend dev:eliza",
    "dev:frontend": "cd frontend && PORT=3003 pnpm dev",
    "dev:backend": "cd backend && pnpm dev",
    "dev:eliza": "cd streampay-eliza && bun run dev",
    "contracts:compile": "cd smart-contracts && pnpm compile",
    "contracts:test": "cd smart-contracts && pnpm test",
    "contracts:deploy": "cd smart-contracts && pnpm deploy",
    "vercel-build": "cd frontend && pnpm install --no-frozen-lockfile && pnpm build",
    "test": "cd backend && pnpm test"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/pg": "^8.15.6",
    "npm-run-all": "^4.1.5",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "next": "^14.2.33"
  }
}